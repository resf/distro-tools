{% extends "admin_layout.jinja" %}

{% block admin_content %}
<div class="bx--grid">
    <div class="bx--row">
        <div class="bx--col">
            <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:1rem;">
                <h1 class="bx--type-expressive-heading-05">Create New API Key</h1>
                <bx-btn href="/admin/api-keys" kind="secondary">Back to API Keys</bx-btn>
            </div>

{% if success %}
<bx-inline-notification kind="success" title="API Key Created Successfully" hide-close-button>
  <div>
    <p><strong>Your new API key:</strong></p>
    <div class="bx--tile" style="font-family:monospace;word-break:break-all;margin:1rem 0;">
      {{ api_key }}
    </div>
    <p><strong>⚠️ Important:</strong> Copy this key now. For security reasons, it will never be shown again.</p>
    <p><strong>Key Details:</strong></p>
    <ul>
      <li><strong>Name:</strong> {{ key_info.name }}</li>
      <li><strong>Permissions:</strong> {{ key_info.permissions|join(', ') }}</li>
      <li><strong>Created:</strong> {{ key_info.created_at.strftime('%Y-%m-%d %H:%M:%S UTC') }}</li>
      {% if key_info.expires_at %}
      <li><strong>Expires:</strong> {{ key_info.expires_at.strftime('%Y-%m-%d %H:%M:%S UTC') }}</li>
      {% else %}
      <li><strong>Expires:</strong> Never</li>
      {% endif %}
    </ul>
  </div>
</bx-inline-notification>
{% else %}

{% if error %}
<bx-inline-notification kind="error" title="Error" hide-close-button>
  {{ error }}
</bx-inline-notification>
{% endif %}

<form id="new_api_key_form" action="" method="POST">
  <bx-form-item>
    <bx-input 
      required 
      name="name" 
      form_id="new_api_key_form"
      value="{{ name or '' }}"
      placeholder="e.g., CI/CD Pipeline, Development Testing"
    >
      <span slot="label-text">Name</span>
      <span slot="helper-text">A descriptive name to help you identify this API key</span>
    </bx-input>
    
    <fieldset class="bx--fieldset" style="margin-top:1rem;">
      <legend class="bx--label">Permissions</legend>
      <div class="bx--form-item bx--checkbox-wrapper">
        <input
          id="workflow_trigger"
          class="bx--checkbox"
          type="checkbox"
          name="workflow_trigger"
          value="true"
          {% if workflow_trigger %}checked{% endif %}
        />
        <label for="workflow_trigger" class="bx--checkbox-label">Workflow Trigger - Allow triggering workflows (e.g., advisory matching)</label>
      </div>
      <div class="bx--form-item bx--checkbox-wrapper">
        <input
          id="workflow_status"
          class="bx--checkbox"
          type="checkbox"
          name="workflow_status"
          value="true"
          {% if workflow_status %}checked{% endif %}
        />
        <label for="workflow_status" class="bx--checkbox-label">Workflow Status - Allow checking workflow status and results</label>
      </div>
    </fieldset>
    
    <div class="bx--form-item">
      <label for="expires_days" class="bx--label">Expires after (days)</label>
      <input
        type="number"
        id="expires_days"
        name="expires_days"
        class="bx--text-input"
        value="{{ expires_days or '' }}"
        placeholder="Leave empty for never expires"
        min="1"
        max="3650"
      />
      <div class="bx--form__helper-text">Leave empty if the key should never expire</div>
    </div>
    
    <button type="submit" class="bx--btn bx--btn--primary" style="margin-top:1rem;margin-bottom:1rem;">
      Create API Key
    </button>
    <bx-btn kind="secondary" href="/admin/api-keys">Cancel</bx-btn>
  </bx-form-item>
</form>
        </div>
    </div>
</div>

{% endif %}
{% endblock %}